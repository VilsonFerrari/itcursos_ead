<h1>Sign up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>
  <br />

  <div class="clearfix">
    <%= f.label :username, :class => "xlInput" %>
    <div class="input">
      <%= f.text_field :username %>
    </div>
  </div>
  
  <div class="clearfix">
    <%= f.label :email, :class => "xlInput" %>
    <div class="input">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password, :class => "xlInput" %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>
  
  <div class="clearfix">
    <%= f.label :password_confirmation, :class => "xlInput" %>
    <div class="input">
      <%= f.password_field :password_confirmation %>
    </div>
    <%= render :partial => "devise/shared/links" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn primary" %>
  </div>
<% end %>
